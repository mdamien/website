{
  "name": "medialab-website-api",
  "private": true,
  "version": "1.0.0",
  "description": "The website's CMS API.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build && cd site && npm run clean",
    "dev": "concurrently --names api,admin -c blue,green \"npm run dev:api\" \"npm run dev:admin\"",
    "dev:api": "nodemon api/server.js",
    "dev:admin": "cd admin && npm run dev",
    "dev:site": "cd site && npm run dev",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose -p website up",
    "docker:down": "docker-compose -p website down",
    "dump": "node ./scripts/dump.js",
    "hydrate": "rm -rf data/* && mkdir -p data/assets && touch data/assets/dummy && cp specs/samples/*.json data",
    "install:admin": "cd admin && npm i",
    "install:site": "cd site && npm i",
    "lint": "eslint api scripts site/*.js site/src admin/src",
    "load": "node ./scripts/load.js",
    "postinstall": "npm run install:admin && npm run install:site",
    "reinstall": "rm -rf ./admin/node_modules && rm -rf ./site/node_modules && rm -rf ./node_modules && npm i",
    "start": "node api/server.js",
    "upgrade:pprd": "git checkout staging && git pull && git merge master && git push && git checkout master",
    "upgrade:prod": "npm run upgrade:pprd && git checkout production && git pull && git merge staging && git push && git checkout master"
  },
  "contributors": [
    {
      "name": "Guillaume Plique",
      "url": "http://github.com/Yomguithereal"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.10.0",
    "async": "^2.6.2",
    "cheerio": "^1.0.0-rc.2",
    "config": "^3.0.1",
    "express": "^4.16.4",
    "express-fileupload": "^1.0.0",
    "fs-extra": "^7.0.1",
    "gatsby-cli": "^2.4.16",
    "json-server": "^0.14.2",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.11",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "simple-git": "^1.107.0",
    "slug": "^0.9.2",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@yomguithereal/eslint-config": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "cli-highlight": "^2.0.0",
    "concurrently": "^4.1.0",
    "csv-stringify": "^5.3.0",
    "eslint": "^5.9.0",
    "eslint-plugin-react": "^7.12.4",
    "faker": "^4.1.0",
    "nodemon": "^1.18.10",
    "pretty": "^2.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "admin/*",
      "build/*",
      "data/*",
      "site/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "rules": {
      "react/jsx-no-bind": 0,
      "react/no-danger": 0,
      "react/no-set-state": 0,
      "react/prefer-stateless-function": 0,
      "react/require-optimization": 0
    }
  }
}
